flowchart TB
    subgraph "CyberEco Monorepo (Nx)"
        direction TB
        
        subgraph "Apps"
            direction LR
            T[Template]
            JS[JustSplit]
            DM[Demos]
            PT[Plantopia]
            MD[MyData]
            OA[Other Apps]
        end
        
        subgraph "Packages"
            direction LR
            subgraph "Core"
                AC[Auth Context]
                ER[Error Handling]
                AP[App Context]
                CF[Configuration]
            end
            
            subgraph "UI"
                CP[Components]
                TW[Tailwind Theme]
                LP[Layout Patterns]
                FD[Form Design]
            end
            
            subgraph "Hooks"
                HA[useAuth]
                HF[useFirestore]
                HN[useNotifications]
                HO[useForm]
                HC[useCache]
            end
            
            subgraph "Firebase Services"
                FS[Firestore]
                FR[Realtime DB]
                FA[Auth Service]
                FT[Storage]
                FC[Cloud Functions]
                FE[Security Rules]
            end
            
            subgraph "Utils"
                UF[Formatters]
                UV[Validators]
                UE[Exporters]
                UT[Transformers]
            end
            
            subgraph "Types"
                TD[TypeDefs]
                TM[Models]
                TI[Interfaces]
            end
            
            subgraph "Config"
                CN[Env Variables]
                CZ[Feature Flags]
                CD[Deployment]
            end
        end
        
        subgraph "Tools"
            direction LR
            AG[App Generator]
            TR[Tests Runner]
            CD[CI/CD Config]
            SL[Scaffolding]
        end
    end
    
    subgraph "Infrastructure"
        direction TB
        subgraph "Firebase Backend"
            direction TB
            FB1[Authentication]
            FB2[Firestore Database]
            FB3[Cloud Storage]
            FB4[Cloud Functions]
            FB5[Hosting]
            FB6[Realtime Database]
        end
        
        subgraph "CI/CD Pipeline"
            direction TB
            CI1[GitHub Actions]
            CI2[Build & Test]
            CI3[Deploy]
            CI4[Version Bump]
        end
        
        subgraph "Development Environment"
            direction TB
            DE1[Local Dev Server]
            DE2[Hot Reload]
            DE3[Storybook]
            DE4[Testing Tools]
        end
    end
    
    subgraph "End User Experience"
        direction TB
        EX1[Web Applications]
        EX2[Mobile Web]
        EX3[Progressive Web Apps]
        EX4[OAuth Single Sign-On]
    end
    
    %% Representative Nodes
    TEMPLATE["Template"]
    JUSTSPLIT["JustSplit"]
    DEMOS["Demos"]
    PLANTOPIA["Plantopia"]
    MYDATA["MyData"]
    OTHER_APPS["Other Apps"]
    CORE["Core"]
    UI["UI"]
    HOOKS["Hooks"]
    FIREBASE["Firebase Services"]
    UTILS["Utils"]
    TYPES["Types"]
    CONFIG["Config"]
    APPS["Apps"]
    TOOLS["Tools"]
    FIREBASE_BACKEND["Firebase Backend"]
    CI_CD["CI/CD Pipeline"]
    DEV_ENV["Development Environment"]
    END_USER["End User Experience"]
    
    %% Flow of Code and Interactions
    TEMPLATE --> JUSTSPLIT & DEMOS & PLANTOPIA & MYDATA & OTHER_APPS
    
    %% Package Dependencies
    CORE --> UI
    CORE --> HOOKS
    UI --> HOOKS
    UI --> UTILS
    HOOKS --> FIREBASE
    FIREBASE --> TYPES
    UTILS --> TYPES
    CORE --> TYPES
    CONFIG --> CORE
    
    %% Tools Interactions
    AG --> TEMPLATE
    TOOLS --> APPS
    
    %% Apps to Infrastructure
    APPS --> FIREBASE_BACKEND
    CI_CD --> APPS
    DEV_ENV --> APPS
    
    %% Infrastructure to End User
    FIREBASE_BACKEND --> END_USER
    
    %% Data Flow
    FB1 <--> FA
    FB2 <--> FS
    FB3 <--> FT
    FB4 <--> FC
    FB5 --> APPS
    FB6 <--> FR
    
    %% Code Generation Flow
    AG -- "generates" --> OA
    SL -- "scaffolds" --> OA
    
    %% Request Flow
    subgraph "Request Flow"
        direction LR
        R1[User Action]
        R2[React Component]
        R3[Custom Hook]
        R4[Firebase Service]
        R5[Backend]
        R6[Response]
        R7[UI Update]
        
        R1 --> R2 --> R3 --> R4 --> R5
        R5 --> R6 --> R7
    end
    
    %% Development Workflow
    subgraph "Development Workflow"
        direction LR
        W1[Create New App]
        W2[Customize Template]
        W3[Add App-Specific Features]
        W4[Connect to Firebase]
        W5[Test & Deploy]
        
        W1 --> W2 --> W3 --> W4 --> W5
    end
    
    %% Update Mechanism
    subgraph "Update Mechanism"
        direction LR
        U1[Package Update]
        U2[Version Bump]
        U3[Changelog]
        U4[Notify Apps]
        U5[App Updates]
        
        U1 --> U2 --> U3 --> U4 --> U5
    end
    
    %% Style Classes
    classDef appNode fill:#d4f1f9,stroke:#05a5d1,stroke-width:2px;
    classDef packageNode fill:#e1d5e7,stroke:#9673a6,stroke-width:2px;
    classDef toolNode fill:#fff2cc,stroke:#d6b656,stroke-width:2px;
    classDef infraNode fill:#dae8fc,stroke:#6c8ebf,stroke-width:2px;
    classDef userNode fill:#d5e8d4,stroke:#82b366,stroke-width:2px;
    classDef flowNode fill:#f8cecc,stroke:#b85450,stroke-width:2px;
    
    class TEMPLATE,JUSTSPLIT,DEMOS,PLANTOPIA,MYDATA,OTHER_APPS,APPS appNode;
    class CORE,UI,HOOKS,FIREBASE,UTILS,TYPES,CONFIG packageNode;
    class TOOLS,AG,TR,CD,SL toolNode;
    class FIREBASE_BACKEND,CI_CD,DEV_ENV infraNode;
    class END_USER userNode;
    class Request Flow,Development Workflow,Update Mechanism flowNode;