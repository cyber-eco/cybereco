# Production Environment Configuration for Hub
# Copy this to .env.production and fill in your values

# App URLs
NEXT_PUBLIC_HUB_URL=https://hub.cybere.co
NEXT_PUBLIC_JUSTSPLIT_URL=https://justsplit.cybere.co
NEXT_PUBLIC_WEBSITE_URL=https://www.cybere.co
NEXT_PUBLIC_SOMOS_URL=https://somos.cybere.co
NEXT_PUBLIC_DEMOS_URL=https://demos.cybere.co
NEXT_PUBLIC_PLANTOPIA_URL=https://plantopia.cybere.co

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your-production-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=cybere.co
NEXT_PUBLIC_FIREBASE_PROJECT_ID=cybereco-hub
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=cybereco-hub.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Auth Configuration
NEXT_PUBLIC_AUTH_COOKIE_DOMAIN=.cybere.co
NEXT_PUBLIC_AUTH_COOKIE_SECURE=true
NEXT_PUBLIC_AUTH_COOKIE_SAME_SITE=lax

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_DEBUG_AUTH=false