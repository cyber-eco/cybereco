# Production Environment Configuration for JustSplit
# Copy this to .env.production and fill in your values

# App URLs
NEXT_PUBLIC_HUB_URL=https://hub.cybere.co
NEXT_PUBLIC_APP_URL=https://justsplit.cybere.co

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your-production-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=cybere.co
NEXT_PUBLIC_FIREBASE_PROJECT_ID=cybereco-justsplit
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=cybereco-justsplit.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Auth Configuration
NEXT_PUBLIC_AUTH_COOKIE_DOMAIN=.cybere.co
NEXT_PUBLIC_AUTH_COOKIE_SECURE=true
NEXT_PUBLIC_AUTH_COOKIE_SAME_SITE=lax

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
NEXT_PUBLIC_DEBUG_AUTH=false

# App-specific Configuration
NEXT_PUBLIC_DEFAULT_CURRENCY=USD
NEXT_PUBLIC_SUPPORTED_CURRENCIES=USD,EUR,GBP,JPY,MXN
NEXT_PUBLIC_MAX_GROUP_SIZE=50
NEXT_PUBLIC_MAX_EXPENSE_AMOUNT=10000